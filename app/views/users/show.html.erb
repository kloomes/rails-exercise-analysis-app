<div>
  <p><%= @user.name %></p>
  <p>Weight: <%= @latest_stats.weight %>kg</p>
  <p>Body Fat: <%= @latest_stats.body_fat %>%</p>
  <p>Lean Mass: <%= @latest_stats.lean_mass %>kg</p>
  <p>BMI: <%= @latest_stats.bmi %></p>
</div>
<hr>
<% @results.each do |result| %>
  <div class="card">
    <% if result.class == CardioWorkout %>
      <%= link_to "Cardio", user_cardio_workout_path(current_user, result.id) %>
    <% else %>
      <%= link_to "Weights", user_weights_workout_path(current_user, result.id) %>
    <% end %>
    <%= result.date.strftime('%d/%m/%Y') %>
    <%= result.time.strftime('%H:%M') %>
    <%= result.workout_type %>
    <%= if result.class == CardioWorkout then result.training_type end %>
    <%= result.duration_hours %>:<%= result.duration_minutes %>:<%= result.duration_seconds %>
  </div>
<% end %>
